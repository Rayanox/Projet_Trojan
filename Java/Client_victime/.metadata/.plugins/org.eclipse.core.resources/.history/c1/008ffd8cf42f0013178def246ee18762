import java.io.IOException;
import java.net.InetAddress;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.Scanner;


public class InstanceServeur extends Thread implements IEcouteursDeMessages{

	public static final int PORT = 2005;
	public static final String IP = "127.0.0.1";
	public static final int NBUSERSMAX = 5;
	
	private ServerSocket socketServeur;
	private Socket socketTransition;
	
	public InstanceServeur() {
		try {
			this.socketServeur = new ServerSocket(PORT, NBUSERSMAX, InetAddress.getByName(IP));
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void run() {
		while(true) {
			
			try {
				System.out.println("Connexion...");
				this.socketTransition = this.socketServeur.accept();
				System.out.println("Connexion Réussie");
			} catch (UnknownHostException e) {
				System.out.println("Connexion échouée");
				// TODO Auto-generated catch block
				e.printStackTrace();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				System.out.println("Connexion échouée");
				e.printStackTrace();
			}
			
			while(true) {
				System.out.println("Appuyez sur une touche numérique ...");
				Scanner sc = new Scanner(System.in);
				int u = sc.nextInt();
					
			}
			
			/*try {
				this.socketTransition.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			System.out.println("Merci d'avoir appuyé sur une touche");
			}*/
		}
			
			
			
		
		
		
	
	
	}
	
	
}
